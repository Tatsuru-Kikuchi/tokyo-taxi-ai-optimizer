{
  "name": "tokyo-taxi-ai-optimizer",
  "version": "1.0.0",
  "description": "Advanced AI-powered taxi optimization system for Tokyo with bilingual support",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "test": "jest",
    "test:watch": "jest --watch",
    "localize": "node scripts/extract-translations.js",
    "deploy": "chmod +x deploy-ios.sh && ./deploy-ios.sh",
    "lint": "eslint ."
  },
  "keywords": [
    "taxi",
    "optimization", 
    "AI",
    "machine-learning",
    "weather",
    "tokyo",
    "transportation",
    "bilingual",
    "japanese",
    "ios",
    "react-native"
  ],
  "author": {
    "name": "Tatsuru Kikuchi",
    "email": "tatsuru.kikuchi@gmail.com",
    "phone": "+81-80-3641-9973"
  },
  "license": "MIT",
  "dependencies": {
    "expo": "~49.0.0",
    "expo-status-bar": "~1.6.0",
    "expo-app-loading": "~2.1.0",
    "expo-asset": "~8.10.1",
    "expo-constants": "~14.4.2",
    "expo-font": "~11.4.0",
    "expo-linking": "~5.0.2",
    "expo-location": "~16.1.0",
    "expo-notifications": "~0.20.1",
    "expo-permissions": "~14.2.1",
    "expo-linear-gradient": "~12.3.0",
    "expo-calendar": "~12.0.1",
    "expo-contacts": "~12.2.0",
    "expo-file-system": "~15.4.5",
    "expo-document-picker": "~11.5.4",
    "expo-localization": "~14.4.0",
    "expo-device": "~5.4.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-charts-wrapper": "^0.5.11",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "13.9.0",
    "react-native-maps": "1.7.1",
    "react-native-vector-icons": "^10.0.0",
    "react-native-animatable": "^1.3.3",
    "react-native-paper": "^5.10.0",
    "react-native-safe-area-context": "^4.7.1",
    "@react-native-async-storage/async-storage": "^1.19.0",
    "@react-native-community/slider": "^4.4.2",
    "@expo/vector-icons": "^13.0.0",
    "i18n-js": "^4.3.0",
    "lodash": "^4.17.21",
    "mathjs": "^11.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.0",
    "@react-native/metro-config": "^0.72.0",
    "@testing-library/jest-native": "^5.4.2",
    "@testing-library/react-native": "^12.1.2",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.5.0",
    "jest-expo": "^49.0.0",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "resolutions": {
    "react-native-maps": "1.7.1"
  },
  "expo": {
    "name": "Tokyo Taxi AI Optimizer",
    "slug": "tokyo-taxi-ai-optimizer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1976D2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tatsuru.tokyotaxiai",
      "buildNumber": "1.0.0",
      "icon": "./assets/ios-icon.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "このアプリは位置情報を使用して、最適なタクシー配置と正確な需要予測を提供します。 / This app uses location to optimize taxi positioning and provide accurate demand predictions.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "このアプリは位置情報を使用して、最適なタクシー配置と正確な需要予測を提供します。 / This app uses location to optimize taxi positioning and provide accurate demand predictions.",
        "NSCalendarsUsageDescription": "このアプリはビジネスミーティングと最適化スケジューリングのためにカレンダーイベントを作成できます。 / This app can create calendar events for business meetings and optimization scheduling.",
        "NSContactsUsageDescription": "このアプリはプロフェッショナルネットワーキング機会のためにビジネス連絡先を追加できます。 / This app can add business contacts for professional networking opportunities.",
        "NSUserNotificationsUsageDescription": "このアプリは最適化アラートと収益機会のために通知を送信します。 / This app sends notifications for optimization alerts and earnings opportunities.",
        "CFBundleLocalizations": [
          "en",
          "ja"
        ],
        "CFBundleDevelopmentRegion": "ja",
        "CFBundleDisplayName": "Tokyo Taxi AI",
        "CFBundleShortVersionString": "1.0.0",
        "CFBundleVersion": "1"
      },
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.tatsuru.tokyotaxiai",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "READ_CONTACTS",
        "WRITE_CONTACTS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "tokyo-taxi-ai-optimizer"
      }
    },
    "plugins": [
      "expo-localization",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1976D2",
          "sounds": [
            "./assets/sounds/optimization-alert.wav",
            "./assets/sounds/earnings-notification.wav"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "このアプリは位置情報を使用して、最適なタクシー配置と正確な需要予測を提供します。 / This app uses location to optimize taxi positioning and provide accurate demand predictions."
        }
      ]
    ],
    "locales": {
      "en": "./localization/en.json",
      "ja": "./localization/ja.json"
    }
  },
  "eas": {
    "projectId": "tokyo-taxi-ai-optimizer",
    "build": {
      "preview": {
        "distribution": "internal",
        "ios": {
          "simulator": true
        }
      },
      "production": {
        "ios": {
          "buildConfiguration": "Release"
        },
        "android": {
          "buildType": "apk"
        }
      }
    },
    "submit": {
      "production": {
        "ios": {
          "appleId": "tatsuru.kikuchi@gmail.com",
          "ascAppId": "your-app-store-connect-app-id",
          "appleTeamId": "your-apple-team-id"
        }
      }
    }
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  },
  "metro": {
    "resolver": {
      "assetExts": ["bin", "txt", "jpg", "png", "json", "wav", "mp3"]
    }
  }
}