{
  "name": "WeatherTaxiOptimizer",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "test": "jest",
    "test:watch": "jest --watch",
    "localize": "node scripts/extract-translations.js"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-maps": "1.7.1",
    "expo-location": "~16.1.0",
    "expo-linear-gradient": "~12.3.0",
    "expo-notifications": "~0.20.1",
    "expo-device": "~5.4.0",
    "expo-constants": "~14.4.2",
    "expo-localization": "~14.4.0",
    "react-native-vector-icons": "^10.0.0",
    "@react-native-async-storage/async-storage": "^1.19.0",
    "react-native-animatable": "^1.3.3",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "13.9.0",
    "expo-weather-api": "^1.0.0",
    "i18n-js": "^4.3.0",
    "react-native-paper": "^5.10.0",
    "react-native-safe-area-context": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-native": "^5.4.2",
    "@testing-library/react-native": "^12.1.2",
    "jest": "^29.5.0",
    "jest-expo": "^49.0.0"
  },
  "resolutions": {
    "react-native-maps": "1.7.1"
  },
  "expo": {
    "name": "Weather Taxi Optimizer",
    "slug": "weather-taxi-optimizer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tokyotaxi.weatheroptimizer",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "このアプリは位置情報を使用して、お客様の地域での天気に基づくタクシー推奨を提供します。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "このアプリは位置情報を使用して、最適なタクシー配置のためのリアルタイム天気と交通更新を提供します。",
        "CFBundleLocalizations": [
          "en",
          "ja"
        ],
        "CFBundleDevelopmentRegion": "ja"
      },
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.tokyotaxi.weatheroptimizer",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "weather-taxi-optimizer-tokyo"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "天気タクシー最適化アプリが天気ベースの推奨のために位置情報を使用することを許可します。",
          "locationAlwaysPermission": "天気タクシー最適化アプリがリアルタイム更新のために位置情報を使用することを許可します。",
          "locationWhenInUsePermission": "天気タクシー最適化アプリが近くの天気とタクシー情報のために位置情報を使用することを許可します。"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#667eea"
        }
      ]
    ],
    "locales": {
      "ja": "./localization/app.ja.json",
      "en": "./localization/app.en.json"
    }
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  }
}