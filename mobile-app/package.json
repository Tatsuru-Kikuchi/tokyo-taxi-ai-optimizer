{
  "name": "TokyoTaxiWeatherIntelligence",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered taxi optimization with weather intelligence - University of Tokyo research",
  "author": {
    "name": "Tatsuru Kikuchi",
    "email": "tatsuru.kikuchi@gmail.com",
    "organization": "University of Tokyo Faculty of Economics"
  },
  "homepage": "https://github.com/Tatsuru-Kikuchi/tokyo-taxi-ai-optimizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tatsuru-Kikuchi/tokyo-taxi-ai-optimizer.git"
  },
  "keywords": [
    "react-native",
    "taxi",
    "weather",
    "ai",
    "tokyo",
    "transportation",
    "mobile",
    "gps",
    "optimization"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "react-native clean",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean:ios": "cd ios && xcodebuild clean && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:ios": "cd ios && xcodebuild -workspace TokyoTaxiWeatherIntelligence.xcworkspace -scheme TokyoTaxiWeatherIntelligence -configuration Release -destination generic/platform=iOS -archivePath build/TokyoTaxiWeatherIntelligence.xcarchive archive",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "postinstall": "cd ios && pod install && cd ..",
    "reset": "npx react-native clean && rm -rf node_modules && npm install && cd ios && pod install && cd .."
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "^3.25.0",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-gesture-handler": "^2.13.4",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "react-native-maps": "^1.8.0",
    "@react-native-community/geolocation": "^3.1.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-push-notification": "^8.1.1",
    "@react-native-firebase/app": "^18.6.1",
    "@react-native-firebase/messaging": "^18.6.1",
    "axios": "^1.6.2",
    "react-native-device-info": "^10.11.0",
    "react-native-permissions": "^3.10.1",
    "react-native-splash-screen": "^3.3.0",
    "react-native-orientation-locker": "^1.5.0",
    "@react-native-community/netinfo": "^9.4.1",
    "react-native-keychain": "^8.1.3",
    "react-native-image-picker": "^7.0.3",
    "react-native-share": "^10.0.2",
    "react-native-rate": "^1.2.12"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/runtime": "^7.23.5",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.2",
    "@types/react": "^18.2.39",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^3.1.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3",
    "detox": "^20.13.5",
    "@types/jest": "^29.5.8",
    "flipper-plugin-react-native-performance": "^1.1.0"
  },
  "resolutions": {
    "@types/react": "^18.2.39"
  },
  "jest": {
    "preset": "react-native",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-maps|react-native-vector-icons|react-native-linear-gradient)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/TokyoTaxiWeatherIntelligence.app",
        "build": "xcodebuild -workspace ios/TokyoTaxiWeatherIntelligence.xcworkspace -scheme TokyoTaxiWeatherIntelligence -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 14"
        }
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_4_API_30"
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "@react-native-community",
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-shadow": [
            "error"
          ],
          "no-shadow": "off",
          "no-undef": "off"
        }
      }
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "react-native": {
    "android": {
      "sourceDir": "android",
      "isLibrary": false,
      "folder": "app"
    },
    "ios": {
      "sourceDir": "ios",
      "isLibrary": false,
      "folder": "TokyoTaxiWeatherIntelligence"
    }
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts/"
    ]
  },
  "codegenConfig": {
    "name": "TokyoTaxiWeatherIntelligenceSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.tokyotaxiweatherintelligence.newarchitecture"
    }
  },
  "metro": {
    "transformer": {
      "getTransformOptions": "async () => ({ transform: { experimentalImportSupport: false, inlineRequires: true } })"
    }
  }
}