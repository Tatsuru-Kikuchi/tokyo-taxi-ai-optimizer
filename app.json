{
  "expo": {
    "name": "東京タクシーAIアプリ",
    "slug": "tokyo-taxi-ai-app",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-1024.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/icon-1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": "false",
      "bundleIdentifier": "com.tatsuru-kikuchi.tokyo-taxi-ai",
      "buildNumber": "8",
      "icon": "./assets/images/icon-1024.png",
      "infoPlist": {
        "CFBundleDisplayName": "東京AIタクシーアプリ",
        "CFBundleName": "東京AIタクシーアプリ",
        "NSLocationWhenInUseUsageDescription": "このアプリは最適なタクシールートを提供するために位置情報を使用します",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "このアプリは最適なタクシールートを提供するために位置情報を使用します",
        "ITSAppUsesNonExemptEncryption": "false"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-1024.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.tatsuru-kikuchi.tokyo-taxi-ai",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/icon-1024.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "このアプリは最適なタクシールートを提供するために位置情報を使用します。"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "8895ba86-e4b4-4389-8516-61589ee9ab17"
      }
    }
  }
}
